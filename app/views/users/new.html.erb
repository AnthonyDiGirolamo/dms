<h1>Sign up as a new user</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>

<% form_for :user, :url => users_path do |f| -%>
<p><b><%= label_tag 'login', 'Desired User Name' %></b><br/>
<%= f.text_field :login %></p>

<p><b><%= label_tag 'name', 'Full Name' %></b><br/>
<%= f.text_field :name %></p>

<p><b><%= label_tag 'email', 'Valid Email Address' %></b><br/>
<%= f.text_field :email %></p>

<p><b><%= label_tag 'password' %></b><br/>
<%= f.password_field :password %></p>

<p><b><%= label_tag 'password_confirmation', 'Confirm Password' %></b><br/>
<%= f.password_field :password_confirmation %></p>

<p><b><%= label_tag 'time_zone', 'Time Zone' %></b><br/>
<%= f.time_zone_select :time_zone,  ActiveSupport::TimeZone.us_zones %></p>

<p>
<b>Role</b><br/>
<% for role in @roles %>
<% if role.name == "employee" %>
<%= radio_button "role", "name", role.name, :checked => true %>
<% else %>
<%= radio_button "role", "name", role.name %>
<% end %>
<%= h role.name.humanize %><br/>
<% end %>
</p>

<p>
<b>Department</b><br/>
<% for department in @departments %>
<% if department == @departments.first %>
<%= radio_button "department", "name", department.name, :checked => true %>
<% else %>
<%= radio_button "department", "name", department.name %>
<% end %>
<%= h department.name %><br/>
<% end %>
</p>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>
