    <%= link_to document.name, document, :class => "action", :style => "background-image: url(/images/icons/16x16/#{document.mime_icon});" %>
    </a>
  </td>
  <td>
    <%= h number_to_human_size(document.document_file_size) %>
  </td>
  <td>
    <%= h format_time(document.updated_at) %>
  </td>

  <%# Indicator Icons %>
  <td class="right">
