<h1>Listing documents</h1>

<table>
  <tr>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td>
      <b><%= h document.name %></b>
    <td>
      <%= h document.document_content_type %>
    </td>
    <td>
      <%= h number_to_human_size(document.document_file_size) %>
    </td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Download', document.document.url %></td>
  </tr>
<% end %>
</table>

<br />

