<%= render :partial => 'user_bar' %>

<h1>Documents</h1>

<p> You are currently using <%= h number_to_human_size(@used_space) %>
(<%= h number_to_percentage(@used_space.to_f / @user.quota.to_f, :precision => 2) %>)
of your <%= h number_to_human_size(@user.quota) %> quota. </p>

<table border="0" cellspacing="0" cellpadding="5">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Size</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td>
      <b><%= h document.name %></b>
    <td>
      <%= h document.document_content_type %>
    </td>
    <td>
      <%= h number_to_human_size(document.document_file_size) %>
    </td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Download', document.document.url %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_document_path %>
