<%= render :partial => 'layouts/user_bar' %>
<%= render :partial => 'layouts/flash_messages' %>

<div class="pagination">
  <%= will_paginate @user_requests, :container => false %>
  <div clas="page_info">
    <p><%= page_entries_info @user_requests %></p>
  </div>
</div>

<table border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th>Created</th>
    <th>User</th>
    <th>Role</th>
    <th>Department</th>
    <th>Status</th>
    <th></th>
  </tr>
  <%= render :partial => 'request_row', :collection => @user_requests %>
</table>
